<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/border"
        android:padding="7dp">

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viet Nam"
            android:textSize="30dp"
            android:textColor="@color/black">
        </TextView>
        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:background="#70ECE299"
            android:orientation="vertical"
            android:id="@+id/layout1"
            android:layout_below="@+id/country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TotalConfirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="#FAC62A">
            </TextView>
            <TextView
                android:id="@+id/Confirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_below="@+id/TotalConfirmed"
                android:layout_centerInParent="true"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/NewConfirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0"
                android:layout_below="@+id/Confirmed"
                android:layout_centerInParent="true"
                android:background="#ECCB28"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/layout1"
            android:background="#59F39B9B"
            android:orientation="vertical"
            android:id="@+id/layout2"
            android:layout_below="@+id/country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TotalDeaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="#FA2A2A">
            </TextView>
            <TextView
                android:id="@+id/Deaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deaths"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_below="@+id/TotalDeaths"
                android:layout_centerInParent="true"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/NewDeaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0"
                android:layout_below="@+id/Deaths"
                android:layout_centerInParent="true"
                android:background="#EC2828"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/layout2"
            android:background="#7E9BE49E"
            android:orientation="vertical"
            android:id="@+id/layout3"
            android:layout_below="@+id/country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TotalRecovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="#2BCD19">
            </TextView>
            <TextView
                android:id="@+id/Recovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recovered"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_below="@+id/TotalRecovered"
                android:layout_centerInParent="true"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/NewRecovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0"
                android:layout_below="@+id/Recovered"
                android:layout_centerInParent="true"
                android:background="#2BCD19"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</layout>